{
  "manifest_version": 2,

  "name": "Offline QR-Code Generator",
  "description": "Generate QR Code without internet connectivity or server lag.",
  "version": "1.0",
  "icons": { 
           "48": "icon48.png",
          "128": "icon128.png" },

  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  }
}